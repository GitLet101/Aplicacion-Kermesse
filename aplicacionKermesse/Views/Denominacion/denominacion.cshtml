@model IEnumerable<aplicacionKermesse.Models.tbl_denominacion>

@{
    ViewBag.Title = "Gestion de Denominacion";
}

<h2>Gestion de Denominacion</h2>

@using (Html.BeginForm("FiltrarDenominacion", "denominacion", FormMethod.Post))
{
    <div class="row justify-content-md-end" style="padding-bottom: 1rem;">
        <div class="col-md-auto" style="padding-right:12rem;">
            <p>
                <a href="@Url.Action("guardarDenominacion")"
                   class="btn btn-primary">
                    <ion-icon name="add-outline"></ion-icon>
                    <span>
                        <strong>Añadir Nuevo</strong>
                    </span>
                </a>
            </p>
        </div>
        <div class="col">
            <div class="input-group">
                @Html.TextBox("cadena", null, new { @class = "form-control col-md-10", @placeholder = "Buscar", @name = "search-outline" })
                <div class="input-group-append">
                    <button type="submit" class="btn btn-success">
                        <i data-feather="search"></i>Buscar
                    </button>
                </div>
            </div>
        </div>
    </div>
}

<table class="table table-hover">
    <tr>
        <th>
            Moneda
        </th>
        <th>
            Valor Letras
        </th>
        <th>
            Valor Numerico
        </th>
        <th>
            Opciones
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td class="text-wrap" style="width: 20rem;">
                @Html.DisplayFor(modelItem => item.tbl_moneda.nombre) (@Html.DisplayFor(modelItem => item.tbl_moneda.signo))
            </td>
            <td class="text-wrap" style="width: 20rem;">
                @Html.DisplayFor(modelItem => item.valor_letras)
            </td>
            <td class="text-wrap" style="width: 10rem;">
                @Html.DisplayFor(modelItem => item.valor)
            </td>
            <td>
                <a href = "@Url.Action("EditarDenominacion", new { id = item.id_moneda })"><ion-icon name="create-outline" style=" font-size: 20px; pointer-events:none;"></ion-icon></a>
                <a href="@Url.Action("VerDenominacion", new { id = item.id_moneda })"><ion-icon name="document-text-outline" style=" font-size: 20px; pointer-events: none;"></ion-icon></a>
                <a href="@Url.Action("borrarDenominacion", new { id = item.id_moneda })" ><ion-icon name="trash-outline" style=" font-size: 20px; pointer-events: none;"></ion-icon></a>
            </td>
        </tr>
    }

</table>

