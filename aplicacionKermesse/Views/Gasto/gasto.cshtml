@model IEnumerable<aplicacionKermesse.Models.tbl_gastos>

@{
    ViewBag.Title = "Gestion de Gasto";
}

<h2>Gestion de Gasto</h2>

@using (Html.BeginForm("FiltrarGasto", "gasto", FormMethod.Post))
{
    <div class="row justify-content-md-end" style="padding-bottom: 1rem;">
        <div class="col-md-auto" style="padding-right:12rem;">
            <p>
                <a href="@Url.Action("guardarGasto")"
                   class="btn btn-primary">
                    <ion-icon name="add-outline"></ion-icon>
                    <span>
                        <strong>Añadir Nuevo</strong>
                    </span>
                </a>
            </p>
        </div>
        <div class="col">
            <div class="input-group">
                @Html.TextBox("cadena", null, new { @class = "form-control col-md-10", @placeholder = "Buscar", @name = "search-outline" })
                <div class="input-group-append">
                    <button type="submit" class="btn btn-success">
                        <i data-feather="search"></i>Buscar
                    </button>
                </div>
            </div>
        </div>
    </div>
}

<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.concepto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.id_cat_gasto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.id_kermesse)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.monto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fecha_gasto)
        </th>
        <th>
            Opciones
        </th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td class="text-wrap" style="width: 20rem;">
        @Html.DisplayFor(modelItem => item.concepto)
    </td>
    <td class="text-wrap" style="width: 35rem;">
        @Html.DisplayFor(modelItem => item.tbl_cat_gastos.nombre_cat)
    </td>
    <td class="text-wrap" style="width: 35rem;">
        @Html.DisplayFor(modelItem => item.tbl_kermesse.nombre)
    </td>
    <td class="text-wrap" style="width: 35rem;">
        @Html.DisplayFor(modelItem => item.fecha_gasto)
    </td>
    <td class="text-wrap" style="width: 10rem;">
        @Html.DisplayFor(modelItem => item.monto)
    </td>
    <td>
        <a href="@Url.Action("EditarGasto", new { id = item.id_gasto })"><ion-icon name="create-outline" style=" font-size: 20px; pointer-events:none;"></ion-icon></a>
        <a href="@Url.Action("VerGasto", new { id = item.id_gasto })"><ion-icon name="document-text-outline" style=" font-size: 20px; pointer-events: none;"></ion-icon></a>
        <a href="@Url.Action("borrarGasto", new { id = item.id_gasto })"><ion-icon name="trash-outline" style=" font-size: 20px; pointer-events: none;"></ion-icon></a>
    </td>
</tr>
    }

</table>

