@model aplicacionKermesse.Models.tbl_moneda

@{
    ViewBag.Title = "Modificar Moneda";
}
<h2>Modificar Moneda</h2>

@using (Html.BeginForm("ActualizarMoneda", "moneda", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id_moneda)

        <div class="form-group">
            @Html.LabelFor(model => model.nombre, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.signo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.signo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.signo, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" name="btnGuardar" class="btn btn-success" />
                <button type="reset" class="btn-warning btn" name="btnLimpiar" value="reset">Limpiar</button>
                <a href="@Url.Action("moneda")" class="btn btn-default"> Regresar </a>
            </div>
        </div>
    </div>
}
